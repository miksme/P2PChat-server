{
  "name": "p2pchat-server",
  "version": "1.0.0",
  "description": "Server for P2PChat",
  "author": "miksme",
  "license": "MIT",
  "private": true,
  "main": "./build/server.js",
  "scripts": {
    "start": "sudo node ./build/server.js",
    "start:win": "node ./build/server.js",

    "build": "tsc -p ./ && cp -r ./src/app ./build",
    "build:win": "node ./node_modules/typescript/bin/tsc -p ./ && xcopy .\\src\\app .\\build /e /y /q"
  },
  
  "dependencies": {
    "compression": "^1.7.4",
    "express": "^4.17.1",
    "helmet": "^4.6.0",
    "simple-peer": "^9.11.0",
    "socket.io": "^4.4.0",
    "uuid": "^8.3.2"
  },
  "devDependencies": {
    "@types/compression": "^1.7.0",
    "@types/cors": "^2.8.10",
    "@types/express": "^4.17.11",
    "@types/uuid": "^8.3.0",
    "ts-node": "^10.4.0",
    "typescript": "^4.2.4"
  }
}
